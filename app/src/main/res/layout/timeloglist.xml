<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Loop through each time log and display its details -->
    <LinearLayout
        android:id="@+id/layoutTimeLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/TSname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity Type: Client Meeting"
            android:paddingLeft="20dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/TSstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hours: 5.0"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/TSdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comments: Gili Gili"
            android:paddingLeft="20dp"/>

    </LinearLayout>
</LinearLayout>